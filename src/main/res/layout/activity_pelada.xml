<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufop.nathany.futmannathany.Pelada"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NÂ° de jogadores na partida"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"/>

        <Spinner
            android:id="@+id/spinnerQtdJogadores"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tempo da partida"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"/>

        <Spinner
            android:id="@+id/spinnerDuracaoPartida"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Escolher Jogadores"
        android:onClick="escolherJogadores"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#166007"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Iniciar Partida"
        android:onClick="iniciarPartida"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#166007"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="10"
        android:orientation="vertical"
        android:textSize="20dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gramacampo"
            android:gravity="bottom"
            />
    </LinearLayout>


</LinearLayout>

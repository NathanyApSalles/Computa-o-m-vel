<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufop.nathany.futmannathany.CadastrarJogadores">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Jogador"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>

    <EditText
        android:id="@+id/editTextNomeJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posição do Jogador"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>

    <Spinner
        android:id="@+id/spinnerPosicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>

    <EditText
        android:id="@+id/editTextTelC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:hint="912345678"
        android:fontFamily="sans-serif-condensed"/>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="#166007"
        android:layout_gravity="center"
        android:onClick="cadastrarJogador"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gramacampo"
            android:gravity="bottom"
            />
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ESTATÍSTICAS DOS JOGADORES"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textViewNomeJogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Jogador"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:id="@+id/textViewPartidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="J"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:id="@+id/textViewVitória"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="V"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:id="@+id/textViewDerrota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="D"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:id="@+id/textViewEmpate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="E"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="15dp"
            android:fontFamily="sans-serif-condensed"
            android:text="J = jogos V = vitórias D = derrotas E = empates"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listEstatisticas"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gramacampo"
            android:gravity="bottom"
            />
    </LinearLayout>


</LinearLayout>

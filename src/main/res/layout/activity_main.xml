<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufop.nathany.futmannathany.MainActivity">


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/ButtonJogadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar jogadores"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="20dp"
        android:background="#efefef"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="listarJogadores"/>

    <Button
        android:id="@+id/ButtonPelada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pelada"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:background="#efefef"
        android:layout_weight="1"
        android:onClick="mostrarPeladas"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/ButtonEstatisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="EstatÃ­sticas"
        android:background="#efefef"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:onClick="mostrarEstatisticas"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gramacampo"
            android:gravity="bottom" />
    </LinearLayout>


</LinearLayout>
